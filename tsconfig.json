{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "types": ["mindustry-types"],
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
